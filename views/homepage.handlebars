{{#each posts as |post| }}
<div class="">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <div class="">
    <h3>{{post.body}}</h3>
  </div>
  <button class="edit-post" data-id="{{post.id}}">Edit</button>
