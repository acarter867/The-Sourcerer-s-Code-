{{#if editMode}}
<form>
  <div>
    <input id="post-title" type="text" value="{{post.title}}"/>
  </div>
  <div class="form-group">
    <textarea id="post-body">{{post.body}}</textarea>
  </div>
  <div class="form-group">
    <input id="submitpost" type="submit" data-id="{{post.id}}" value="Publish"/>
  </div>
</form>
<script src="/js/editpost.js"></script>
{{else}}
<form>
  <div>
    <input id="post-title" type="text" placeholder="Title"/>
  </div>
  <div class="form-group">
    <textarea id="post-body"></textarea>
  </div>
  <div class="form-group">
    <input id="submitpost" type="submit" value="Publish"/>
  </div>
</form>
<script src="/js/newpost.js"></script>
{{/if}}